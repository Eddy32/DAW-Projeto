extends ../layout

block content
  section.login-block
    .container
      .row
        .col-md-4.login-sec
          h2.text-center Registar
          form.login-form(action="/reg" method='POST')
            .form-group
              label(for='exampleInputEmail1') Nome de Utilizador
              input.form-control(type='text' name='name' placeholder='Your Name')
            .form-group
              label(for='exampleInputEmail1') Email
              input.form-control(type='text' name='email' placeholder='Your Email')
            .form-group
              label(for='exampleInputPassword1') Password
              input.form-control(type='password' name='password' placeholder='Password')
            .form-group
              label(for='exampleInputPassword1') Género
              select.form-control(data-toggle='select' name="gender" data-placeholder='Disabled results')
                option(value='male') Masculino
                option(value='female') Feminino

            button.btn.btn-login.float-right(type='submit' name='signup' value='Register') Registar

            a(href='login') Já está registado?

        .col-md-8.banner-sec
              img.d-block.img-fluid(src='../assets/img/rip.jpg')
              .banner-text
                h2 Welcome!
                p
