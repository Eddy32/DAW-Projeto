doctype html
head
  title JavaScript Tag Cloud Chart
  script(src='https://cdn.anychart.com/releases/v8/js/anychart-base.min.js')
  script(src='https://cdn.anychart.com/releases/v8/js/anychart-tag-cloud.min.js')
  style.
    html, body, #container {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    }
#container
    script.
        anychart.onDocumentReady(function() {
            var data = [
                {"hashtag": "Mandarin chinese", "value": 1},
                {"hashtag": "English", "value": 9},
                {"hashtag": "Hindustani", "value": 5},
                {"hashtag": "Spanish", "value": 5},
                {"hashtag": "Arabic", "value": 4},
                {"hashtag": "Malay", "value": 24},
                {"hashtag": "Russian", "value": 20},
                {"hashtag": "Bengali", "value": 6},
                {"hashtag": "Portuguese", "value": 9},
                {"hashtag": "French", "value": 22},
                {"hashtag": "Hausa", "value": 5, },
                {"hashtag": "Punjabi", "value": 18, },
                {"hashtag": "Japanese", "value": 2, },
                {"hashtag": "German", "value": 1, },
                {"hashtag": "Persian", "value": 12, }
            ];

            var chart = anychart.tagCloud(data);

            chart.title('Tags')

            chart.angles([0, -45, 90])

            chart.colorRange(true);

            chart.listen("pointClick", function(e){
                var url = "https://en.wikipedia.org/wiki/" + e.point.get("hashtag");
                window.open(url, "_blank");
            });


            chart.container("container");
            chart.draw();
        });