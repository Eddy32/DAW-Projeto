doctype html
head
  title JavaScript Tag Cloud Chart
  script(src='https://cdn.anychart.com/releases/v8/js/anychart-base.min.js')
  script(src='https://cdn.anychart.com/releases/v8/js/anychart-tag-cloud.min.js')
  style.
    html, body, #container {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    }
#container
    script.
        anychart.onDocumentReady(function() {
            var data = [
                {"x": "Mandarin chinese", "value": 1, category: "Sino-Tibetan"},
                {"x": "English", "value": 9, category: "Indo-European"},
                {"x": "Hindustani", "value": 5, category: "Indo-European"},
                {"x": "Spanish", "value": 5, category: "Indo-European"},
                {"x": "Arabic", "value": 4, category: "Afro-Asiatic"},
                {"x": "Malay", "value": 24, category: "Austronesian"},
                {"x": "Russian", "value": 20, category: "Indo-European"},
                {"x": "Bengali", "value": 6, category: "Indo-European"},
                {"x": "Portuguese", "value": 9, category: "Indo-European"},
                {"x": "French", "value": 22, category: "Indo-European"},
                {"x": "Hausa", "value": 5, category: "Afro-Asiatic"},
                {"x": "Punjabi", "value": 18, category: "Indo-European"},
                {"x": "Japanese", "value": 2, category: "Japonic"},
                {"x": "German", "value": 1, category: "Indo-European"},
                {"x": "Persian", "value": 12, category: "Indo-European"}
            ];

            var chart = anychart.tagCloud(data);

            chart.title('Tags')

            chart.angles([0, -45, 90])

            chart.colorRange(true);

            chart.listen("pointClick", function(e){
                var url = "https://en.wikipedia.org/wiki/" + e.point.get("x");
                window.open(url, "_blank");
            });


            chart.container("container");
            chart.draw();
        });